if SHIELD_PAGING

config ZMK_KEYBOARD_NAME
    default "paging"
      
endif

if ZMK_BACKLIGHT

config PWM
    default y

config LED_PWM
    default y

endif # ZMK_BACKLIGHT

if ZMK_DISPLAY

config I2C
    default y

config SSD1306
    default y

endif # ZMK_DISPLAY

if LVGL

config LV_Z_VDB_SIZE
    default 64

config LV_DPI_DEF
    default 148

config LV_Z_BITS_PER_PIXEL
    default 1

choice LV_COLOR_DEPTH
    default LV_COLOR_DEPTH_1
endchoice

endif # LVGL


config ZMK_LAYER_INDICATOR
    bool "Enable layer indicator driver"
    default y
    help
      Enables the layer indicator driver for monitoring layer state changes.
      
config ZMK_LAYER_INDICATOR_MAX_EVENTS
    int "Maximum number of layer events to queue"
    default 20
    depends on ZMK_LAYER_INDICATOR
    help
      Maximum number of layer state change events that can be queued for processing.
      
config ZMK_LAYER_INDICATOR_LOG_ALL_TRANSITIONS
    bool "Log all layer transitions"
    default n
    depends on ZMK_LAYER_INDICATOR
    help
      When enabled, logs every layer state change event. When disabled, only logs when
      the total number of active layers changes.